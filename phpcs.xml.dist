<?xml version="1.0"?>
<ruleset name="Elementor Stubs">
	<description>WordPress Coding Standards for Elementor Stubs</description>

	<!-- Files to check -->
	<file>generate.php</file>
	<file>tests</file>

	<!-- Exclude patterns -->
	<exclude-pattern>elementor-stubs.php</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<!-- Use WordPress Core standards -->
	<rule ref="WordPress-Core">
		<!-- Allow modern file naming (StubSyntaxTest.php vs class-stub-syntax-test.php) -->
		<exclude name="WordPress.Files.FileName"/>
		<!-- Allow camelCase naming (not WordPress plugin code) -->
		<exclude name="WordPress.NamingConventions.ValidFunctionName"/>
		<exclude name="WordPress.NamingConventions.ValidVariableName"/>
	</rule>

	<!-- Show progress and use colors -->
	<arg value="ps"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>
</ruleset>
